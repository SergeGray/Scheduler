<%= form_with model: appointment, remote: true do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :date %>
    <%= f.date_select :date %>
  </p>

  <p>
    <%= f.label :time_slot %>
    <%= f.collection_select :time_slot_id,
                            TimeSlot.all, :id,
                            :day_and_time,
                            prompt: true %>
  </p>

  <p>
    <%= f.submit button_action %>
  </p>
<% end %>
